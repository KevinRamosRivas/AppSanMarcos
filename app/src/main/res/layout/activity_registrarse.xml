<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoRegistro"
    tools:context=".RegistrarseActivity">

    <EditText
        android:id="@+id/contrasenaI"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/boton_ver5"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/contrasenaText"
        android:inputType="textPassword"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correoI" />

    <Button
        android:id="@+id/iniciarSesionBtn"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:background="@drawable/boton_ingresar"
        android:gravity="center"
        android:onClick="registrarUsuario"
        android:text="@string/btn_registrarse_sesion"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenaConfirmacion"
        app:layout_constraintVertical_bias="0.146" />

    <EditText
        android:id="@+id/correoI"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/boton_ver5"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/correoText"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contrasenaConfirmacion"
        android:layout_width="254dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/boton_ver5"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/confirmarContrasenaText"
        android:inputType="textPassword"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenaI" />
</androidx.constraintlayout.widget.ConstraintLayout>