<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8"
    tools:context=".estadioUnmsm" >


    <TextView
        android:id="@+id/titulo_estadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TituloEstadio"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="323dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_estadio"
        app:layout_constraintVertical_bias="0.03">

    </ViewFlipper>

    <ImageButton
        android:id="@+id/estadioAVozPlay"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/cuerpo_estadio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_flipper"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/estadioAVozPause"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toTopOf="@+id/cuerpo_estadio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/estadioAVozPlay"
        app:layout_constraintTop_toBottomOf="@+id/v_flipper"
        app:layout_constraintVertical_bias="0.444"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <TextView
        android:id="@+id/cuerpo_estadio"
        android:layout_width="368dp"
        android:layout_height="351dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/cuerpoEstadio"
        android:textAlignment="viewStart"
        android:textColor="#050505"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_flipper"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>